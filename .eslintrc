{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "arrow-body-style": [0],
    "comma-dangle": [0],
    "guard-for-in": [1],
    "import/imports-first": [1],
    "jsx-a11y/img-has-alt": [1],
    "max-len": [1],
    "no-underscore-dangle": [0],
    // @TODO
    "react/no-find-dom-node": [0],
    // @TODO
    "react/no-string-refs": [0],
    "react/sort-comp": [0]
  }
}
